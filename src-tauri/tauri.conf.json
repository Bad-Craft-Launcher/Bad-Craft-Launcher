{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "bad-craft-launcher",
  "version": "1.0.10",
  "identifier": "com.tntyep520.bad_craft_launcher",
  "build": {
    "devUrl": "http://localhost:3920",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Bad Craft Launcher",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
